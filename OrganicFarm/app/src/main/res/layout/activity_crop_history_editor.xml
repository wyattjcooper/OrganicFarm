<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kaylaflaten.organicfarm.CropManager">

    <TextView
        android:id="@+id/cropTitleCropHistoryEditor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/cropID"
        android:layout_alignTop="@+id/nameCropHistoryEditor"
        android:layout_alignRight="@+id/notesTitleCropHistoryEditor"
        android:layout_alignEnd="@+id/notesTitleCropHistoryEditor" />

    <TextView
        android:id="@+id/dateTitleCropHistoryEditor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/datePlantedID"
        android:layout_above="@+id/notesTitleCropHistoryEditor"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/notesTitleCropHistoryEditor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/notesID"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/dateTitle"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"/>


    <EditText
        android:id="@+id/nameCropHistoryEditor"
        android:gravity="right"
        android:textAlignment="gravity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="@string/nameHint"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/dateTitle"
        android:layout_alignBottom="@+id/cropTitle"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/dateCropHistoryEditor"
        android:gravity="right"
        android:textAlignment="gravity"
        android:textAppearance="?android:attr/textAppearanceMediumInverse"
        android:textColor="?attr/editTextColor"
        android:background="?attr/editTextBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/dateHint"
        android:inputType="date"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/dateTitleCropHistoryEditor"
        android:layout_alignBottom="@+id/dateTitleCropHistoryEditor"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/notesCropHistoryEditor"
        android:gravity="top|left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:hint="@string/noteHint"
        android:textAlignment="gravity"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_above="@+id/enterCropHistoryEditor"
        android:layout_below="@+id/notesTitleCropHistoryEditor" />


    <Button
        android:id="@+id/deleteCropHistoryEditor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceButton"
        android:text="@string/deleteButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"/>

    <Button
        android:id="@+id/enterCropHistoryEditor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceButton"
        android:text="@string/enterButtonID"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true" />

</RelativeLayout>

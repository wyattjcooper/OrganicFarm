<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.kaylaflaten.organicfarm.HarvestEditor"
    tools:showIn="@layout/activity_harvest_editor">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DELETE"
        android:id="@+id/deleteHarvestEditor"
        android:layout_marginBottom="96dp"
        android:layout_alignParentBottom="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENTER"
        android:id="@+id/enterHarvestEditor"
        android:layout_alignTop="@+id/deleteHarvestEditor"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Owner"
        android:id="@+id/ownerHarvestEditor"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/enterHarvestEditor"
        android:layout_alignStart="@+id/enterHarvestEditor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Section"
        android:id="@+id/sectionDisplayTitleHarvestEditor"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Amount"
        android:id="@+id/amountLabelHarvestEditor"

        android:layout_above="@+id/dateHarvestEditor"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Notes"
        android:id="@+id/notesLabelHarvestEditor"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/sectionDisplayTitleHarvestEditor"
        android:layout_alignEnd="@+id/sectionDisplayTitleHarvestEditor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Loading..."
        android:id="@+id/nameTextHarvestEditor"
        android:layout_alignTop="@+id/sectionHarvestEditor"
        android:layout_toRightOf="@+id/sectionHarvestEditor"
        android:layout_toEndOf="@+id/sectionHarvestEditor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Date"
        android:id="@+id/dateLabelHarvestEditor"
        android:layout_above="@+id/notesLabelHarvestEditor"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/amountHarvestEditor"
        android:layout_above="@+id/dateHarvestEditor"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/dateHarvestEditor"
        android:layout_above="@+id/notesLabelHarvestEditor"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notesHarvestEditor"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/notesLabelHarvestEditor"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/deleteHarvestEditor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Loading..."
        android:id="@+id/sectionHarvestEditor"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/amountHarvestEditor"
        android:layout_toStartOf="@+id/amountHarvestEditor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Bed"
        android:id="@+id/bedDisplayLabelHarvestEditor"
        android:layout_below="@+id/nameTextHarvestEditor"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Loading..."
        android:id="@+id/bedHarvestEditor"
        android:layout_alignBottom="@+id/bedDisplayLabelHarvestEditor"
        android:layout_toRightOf="@+id/deleteHarvestEditor"
        android:layout_toEndOf="@+id/deleteHarvestEditor" />

</RelativeLayout>

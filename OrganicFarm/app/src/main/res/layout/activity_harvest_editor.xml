<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kaylaflaten.organicfarm.HarvestEditor">

    <TextView
        android:id="@+id/dateTitleHarvestEditor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Harvest Date"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/amountHarvestEditor"
        android:layout_toStartOf="@+id/amountHarvestEditor" />

    <TextView
        android:id="@+id/amountTitleHarvestEditor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/amountHarvestedID"
        android:layout_alignTop="@+id/dateTitleHarvestEditor"
        android:layout_alignRight="@+id/notesHarvestEditor"
        android:layout_alignEnd="@+id/notesHarvestEditor" />

    <TextView
        android:id="@+id/finishedTitleHarvestEditor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/amountTitleHarvestEditor"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/notesTitleHarvestEditor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Harvest Notes"
        android:layout_below="@+id/finishedTitleHarvestEditor"
        android:layout_alignRight="@+id/dateHarvestEditor"
        android:layout_alignEnd="@+id/dateHarvestEditor" />

    <TextView
        android:id="@+id/dateHarvestEditor"
        android:gravity="right"
        android:textAlignment="gravity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:text="Loading..."
        android:textAppearance="@android:style/TextAppearance.Large"
        android:layout_below="@+id/dateTitleHarvestEditor"
        android:layout_toRightOf="@+id/finishedTitleHarvestEditor"
        android:layout_toEndOf="@+id/finishedTitleHarvestEditor" />

    <EditText
        android:id="@+id/amountHarvestEditor"
        android:gravity="right"
        android:textAlignment="gravity"
        android:hint="@string/amountHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:text="Loading..."
        android:textAppearance="@android:style/TextAppearance.Large"
        android:layout_below="@+id/amountTitleHarvestEditor"
        android:layout_alignLeft="@+id/amountTitleHarvestEditor"
        android:layout_alignStart="@+id/amountTitleHarvestEditor" />


    <EditText
        android:id="@+id/notesHarvestEditor"
        android:gravity="top|left"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:textAlignment="gravity"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/notesTitleHarvestEditor"
        android:layout_above="@+id/enterHarvestEditor"
        android:text="Loading..." />

    <Button
        android:id="@+id/enterHarvestEditor"
        android:textAppearance="?android:attr/textAppearanceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:text="Anonymous"
        android:id="@+id/ownerHarvestEditor"
        android:layout_below="@+id/harvestedByTitleHarvestEditor"
        android:layout_toRightOf="@+id/finishedTitleHarvestEditor"
        android:layout_toEndOf="@+id/finishedTitleHarvestEditor" />

    <TextView
        android:id="@+id/harvestedByTitleHarvestEditor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Harvested By"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/deleteHarvestEditor"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/finishedTitleHarvestEditor"
        android:layout_toEndOf="@+id/finishedTitleHarvestEditor" />


</RelativeLayout>
